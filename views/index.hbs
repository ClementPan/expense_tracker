{{!-- dropdown --}}
<div class="topBar">
  <div class="dropdown">
    <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
      aria-haspopup="true" aria-expanded="false">
      {{#if filter}} {{filter}} {{else}} 類別 {{/if}}
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <a class="dropdown-item" href="/sort/home">家居物業</a>
      <a class="dropdown-item" href="/sort/shuttle">交通出行</a>
      <a class="dropdown-item" href="/sort/grin">休閒娛樂</a>
      <a class="dropdown-item" href="/sort/utensils">餐飲食品</a>
      <a class="dropdown-item" href="/sort/pen">其他</a>
    </div>
  </div>
  <h5>總金額：<span>N/A</span></h5>

  <a href="/records/new" class="btn btn-danger">
    新增支出
  </a>
</div>
{{!-- totalAmount --}}
{{!-- <h5>總金額：<span>N/A</span></h5> --}}

<div class="icons" style="display: none;">
  {{#each category}}{{this}}{{/each}}
</div>

{{!-- data list --}}
<ul class="list-group">

  {{#if record}}
  {{#each record}}

  <div class="icons">
    <p>{{#each category}}{{this}}{{/each}}</p>
  </div>

  <li class="liItem">
    <div class="container">
      <div class="headInfo">
        <div class="middleInfo">
          {{!-- <i class="cateIcons text-info fas "></i> --}}
          <i class="cateIcons fas "></i>

          <h5>{{this.name}}</h5>
          <p class="date align-items-center">{{this.date}}</p>
        </div>
      </div>
      <h6 class="amount">{{this.amount}}</h6>
    </div>

    <div class='buttons'>
      <form action="/records/{{this._id}}" method="get">
        <button type="submit" class="btn btn-outline-dark border border-white" style="display:inline">修改</button>
      </form>
      <form action="/records/{{this._id}}?_method=DELETE" method="POST">
        <button type="submit" class="btn btn-outline-dark border border-white" style="display:inline">刪除</button>
      </form>
    </div>
  </li>
  {{/each}}

  {{else}}
  <li class='d-flex justify-content-center'>
    <h3>沒有紀錄</h3>
  </li>

  {{/if}}

</ul>
